<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:clickable="true"
    android:focusable="true"
    android:descendantFocusability="blocksDescendants"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:minHeight="72dp"
    android:background="?attr/conversation_list_item_background"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/main_indicator"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_check_white_24dp"
        android:contentDescription="@string/main_transport"
        android:visibility="gone"
        app:tint="?attr/colorAccent"
        tools:visibility="visible" />

  <TextView
      android:id="@+id/title"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:singleLine="true"
      android:ellipsize="marquee"
      android:fontFamily="sans-serif"
      android:textSize="16sp"
      tools:text="user@example.com" />

  <ImageView
      android:id="@+id/edit_button"
      android:layout_width="48dp"
      android:layout_height="72dp"
      android:paddingStart="12dp"
      android:paddingEnd="12dp"
      android:clickable="true"
      android:focusable="true"
      android:contentDescription="@string/edit_transport"
      android:background="@drawable/touch_highlight_background"
      android:src="@drawable/ic_create_white_24dp"
      app:tint="?attr/conversation_list_item_date_color" />

  <ImageView
      android:id="@+id/delete_button"
      android:layout_width="48dp"
      android:layout_height="72dp"
      android:paddingStart="12dp"
      android:paddingEnd="12dp"
      android:clickable="true"
      android:focusable="true"
      android:contentDescription="@string/remove_transport"
      android:background="@drawable/touch_highlight_background"
      android:src="@drawable/ic_delete_white_24dp"
      app:tint="?attr/conversation_list_item_date_color" />

</LinearLayout>
